            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/hwhite" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/kelasUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jauharul Maknun"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/hgrey_800"
            android:fontFamily="@font/robotoregular"
            app:layout_constraintTop_toBottomOf="@id/namaUser"
            app:layout_constraintStart_toStartOf="@id/namaUser"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kesamben - Blitar"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/hgrey_500"
            android:fontFamily="@font/robotoregular"
            app:layout_constraintTop_toBottomOf="@id/kelasUser"
            app:layout_constraintStart_toStartOf="@id/kelasUser"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

